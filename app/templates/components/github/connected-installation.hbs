<div class="github-app-installation__details">
  <div>
    <img src="{{githubAppInstallation.githubAccountAvatarUrl}}&amp;size=40" height="40" width="40" />
    <h4>{{githubAppInstallation.githubAccountLogin}}</h4>
  </div>
  <div>
    <a {{action disconnect}}>Remove from {{organization.name}}</a>
  </div>
</div>
{{#if githubRepos}}
  <div class="github-app-installation__repos">
    <ul>
    {{#each repos as |repoItem|}}
      {{#github-repo githubRepo=repoItem.model}}
        {{#if repoItem.isConnected}}
          <div class="github-repo__sync">Connected</div>
          <a {{action 'disconnectRepo' repoItem.model project}} class="github-repo__remove-link" data-test-selector="github repo remove link">Remove</a>
        {{else}}
          <button {{action 'connectRepo' repoItem.model project}} class="clear small" data-test-selector="github repo connect button">Connect</button>
        {{/if}}
      {{/github-repo}}
    {{/each}}
    </ul>
  </div>
{{/if}}
