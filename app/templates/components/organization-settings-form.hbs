<div class="input-group">
  {{image-drop
    hoverText="Change your logo."
    onDone=(action uploadDone)
    onError=(action uploadErrored)
    onStart=(action uploadStarted)
    originalImage=organization.iconLargeUrl
  }}
</div>
<div class="input-group">
  {{input type="text" name="name" value=organization.name placeholder="Organization Name"}}
</div>
<div class="input-group">
  {{input type="text" name="description" value=organization.description placeholder="Description"}}
</div>

<div class="input-group">
  <button class="save default" {{action 'save'}}>Update Settings</button>
</div>
